@model List<ProductModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-warning">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Category Id</th>
            <th scope="col">Price</th>
            <th scope="col">Created Date</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.CategoryId</td>
                <td>@item.Price</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id"><button class="btn btn-outline-success">Update</button></a>
                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id"><button class="btn btn-outline-danger">Delete</button></a>
                </td>
            </tr>
        }
    </tbody>
    <a asp-action="Add" asp-controller="Home"><input class="btn btn-outline-dark" value="Product Add" type="button" /></a>
    
</table>

